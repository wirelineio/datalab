{
  "name": "datalab",
  "version": "1.0.0",
  "description": "DataLab demo",
  "repository": "git@github.com:wirelineio/datalab.git",
  "license": "UNLICENSED",
  "private": true,
  "workspaces": {
    "packages": [
      "@datalab/*",
      "services/*"
    ],
    "nohoist": ["**/react-native", "**/react-native/**","**/expo", "**/expo/**", "**/@datalab/core", "**/@datalab/core/**", "**/schedule", "**/schedule/**" ]
  },
  "lint-staged": {
    "*.js": "eslint --ignore-path .eslintignore"
  },
  "pre-commit": [
    "lint:staged"
  ],
  "scripts": {
    "lint": "lerna run lint",
    "lint:fix": "lerna run lint -- --fix"
  },
  "devDependencies": {
    "babel-eslint": "^10.0.1",
    "eslint": "^5.6.1",
    "eslint-config-prettier": "^3.1.0",
    "eslint-loader": "^2.1.1",
    "eslint-plugin-prettier": "^3.0.0",
    "eslint-plugin-react": "^7.11.1",
    "lerna": "^3.4.3",
    "prettier": "^1.14.3"
  }
}
