{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "stack: @datalab",
      // "program": "/Users/elmasse/Services/wireline/darkstar/sub/cli/bin/wire.js",
      "program": "${workspaceRoot}/node_modules/.bin/wire",
      "args": [
        "dev",
        "stack",
        "-d",
        "--stack", "${workspaceFolder}/ops/faas/stack.yml",
        "--services", "${workspaceFolder}",
      ],
      "cwd": "${workspaceFolder}",
      "autoAttachChildProcesses": true,
      "sourceMaps": true,
      "env": {
        "WRL_REGISTRY_URL": "https://api-dev.wireline.ninja/",
        "WRL_COMPUTE_URL": "https://compute-dev.wireline.ninja/"
      }
    },
    {
      "type": "node",
      "request": "launch",
      "name": "app.datalab",
      "program": "${workspaceFolder}/node_modules/.bin/wire",
      "args": [
        "dev",
        "-p",
        "3000"
      ],
      "cwd": "${workspaceFolder}/@datalab/app"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "backend.datalab",
      "program": "${workspaceFolder}/node_modules/.bin/wire",
      "args": [
        "dev",
        "-p",
        "3001"
      ],
      "cwd": "${workspaceFolder}/@datalab/backend",
      "env": {
        "WRL_STACK": "FAKE_BACKEND_STACK",
        "WRL_DOMAIN": "example.com",
        "WRL_DEPLOYMENT": "FAKE_BACKEND_DEPLOYMENT",
        "WRL_STAGE": "dev",
        "WRL_VERSION": "0.0.1"
      }
    },
    {
      "type": "node",
      "request": "launch",
      "name": "svc.contacts",
      "program": "${workspaceFolder}/node_modules/.bin/wire",
      "args": [
        "dev",
        "-p",
        "4004"
      ],
      "cwd": "${workspaceFolder}/services/contacts",
      "env": {
        "WRL_STACK": "FAKE_CONTACTS_STACK",
        "WRL_DOMAIN": "example.com",
        "WRL_DEPLOYMENT": "FAKE_CONTACTS_DEPLOYMENT",
        "WRL_STAGE": "dev",
        "WRL_VERSION": "0.0.1"
      }      
    },

  ],
  "compounds": [
    {
      "name": "@datalab",
      "configurations": ["app.datalab", "backend.datalab", "svc.contacts"]
    }
  ]
}